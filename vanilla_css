}

/* Set white color for all header text */
#header, #header .navbar-brand, #header .nav-item, #header a {
    color: #ffffff; /* White text color for readability on dark background */
}

/* Adjust .bg-dark and .bg-light to match the dark transparency */
.bg-dark, .bg-light {
    background-color: rgba(0, 0, 0, 0.5) !important;
    color: #ffffff;
}

/* Hide the original logo SVG */
