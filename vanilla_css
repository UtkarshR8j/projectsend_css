    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: background 0.3s ease;
}

/* Navbar text and links */
#header .navbar-brand,
#header .nav-item,
#header a {
    color: var(--main_text);
    font-family: var(--font_heading);
