:root {
    /* Core design variables */
    --body_background: url('https://d2p5uoj6rqd2yg.cloudfront.net/pexels-laura-penwell-309923-3608056.jpg');
    --main_text: #ffffff;
    --accent_color: #00c6ff;
    --dark_accent: rgba(0, 0, 0, 0.3);
    --light_accent: rgba(255, 255, 255, 0.2);
    --font_body: 'Roboto', sans-serif;
    --font_heading: 'Poppins', sans-serif;
    --blur_strength: 6px;
    --global_box_shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
}

*,
*::before,
*::after {
    box-sizing: border-box;
}

body {
    background: var(--body_background) no-repeat center center fixed;
    background-size: cover;
    font-family: var(--font_body);
    color: var(--main_text);
    margin: 0;
    padding: 0;
    line-height: 1.8; /* Improved line height for readability */
    overflow-x: hidden; /* Prevent horizontal scroll */
}

h1, h2, h3, h4, h5, h6 {
    color: var(--main_text);
    font-family: var(--font_heading);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin: 20px 0 10px 0; /* Increased spacing for better separation */
    transition: color 0.3s ease;
}

p, li, a {
    font-size: 1.1rem; /* Increased font size for better readability */
    line-height: 1.8;
    color: var(--main_text);
    transition: color 0.3s ease;
}

a {
    text-decoration: none;
}

a:hover {
    color: var(--accent_color);
    text-decoration: underline;
}

/* Header */
#header {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(var(--blur_strength));
    box-shadow: var(--global_box_shadow);
    padding: 20px 40px;
    border-radius: 20px; /* More rounded for modern appeal */
    transition: background-color 0.3s ease, box-shadow 0.3s ease;
}

/* Navbar */
